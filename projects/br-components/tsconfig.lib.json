{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "../../out-tsc/lib",
        "target": "ES2022",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": [],
        "lib": ["dom", "ES2022"],
        "paths": {
            "*": ["*"]
        }
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "include": ["custom.d.ts"],
    "exclude": ["src/test.ts", "**/*.spec.ts", "**/*.stories.*"]
}
